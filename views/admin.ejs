                        <p>
                            <%= manageArizona[i].details.substring(0,80) %> . . .
                        </p>
                        <a href="/projectA/<%= manageArizona[i]._id %>" class="btn m-2 btn-outline-info">View More Details</a>
                        <a href="/delete/arizonaProject/<%= manageArizona[i]._id %>" class="btn m-2 btn-outline-danger">Delete This</a>
                    </div>
                    <% } %>
                </div>
