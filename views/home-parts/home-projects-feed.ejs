<section>
    <style>
        .cardStyle {
            border: none!important;
            width: 19rem;
        }
        @media(max-width: 900px){
            .cardStyle {
                border: none!important;
                width: 100%;
            }
        }
    </style>
    <h2 class="text-center mb-5 h1">Our Office Locations</h2>

    <p class="text-center mb-5 mx-auto w-responsive">
        We are an established and respected steel fabricator and erector dedicated to our clients, vendors, and employees; providing quality, performance and value through Christ centered principles.
    </p>

    <div class="row">
        <div class="col-12">

            <!-- Pills navs -->
            <ul class="nav nav-pills nav-justified mb-3 mx-n2 mt-n2" id="issuesTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="construction-tab" data-mdb-toggle="pill" href="#construction" role="tab"
                       aria-controls="construction" aria-selected="true">Arizona Projects</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="painting-tab" data-mdb-toggle="pill" href="#painting" role="tab"
                       aria-controls="painting" aria-selected="false">Nevada Projects</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="architecture-tab" data-mdb-toggle="pill" href="#architecture" role="tab"
                       aria-controls="architecture" aria-selected="false">California Projects</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="renovation-tab" data-mdb-toggle="pill" href="#renovation" role="tab"
                       aria-controls="renovation" aria-selected="false">Hawaii Projects</a>
                </li>
            </ul>
            <!-- Pills navs -->

            <!-- Pills content -->
            <div class="tab-content pt-3" id="servicesContent">
                <div class="tab-pane fade show active" id="construction" role="tabpanel" aria-labelledby="construction-tab">

                    <div class="row row-cols-lg-auto d-flex mx-auto justify-content-center align-items-center me-2 py-1">
                        <% for(i=0; i < arizonaProjects.length; i++){ %>
                        <div class="card cardStyle">
                            <div class="bg-image hover-zoom shadow-1-strong rounded">
                                <a href="/projectA/<%= arizonaProjects[i]._id %>">
                                    <img src="<%= arizonaProjects[i].image %>"
                                         class="img-fluid h-50">
                                </a>
                            </div>
                        </div>
                        <% } %>
                    </div>

                </div>
                <div class="tab-pane fade" id="painting" role="tabpanel" aria-labelledby="painting-tab">

                    <div class="row row-cols-lg-auto d-flex mx-auto justify-content-center align-items-center me-2 py-1">
                        <% for(i=0; i < nevadaProjects.length; i++){ %>
                            <div class="card cardStyle">
                                <div class="bg-image hover-zoom shadow-1-strong rounded">
                                    <a href="/projectB/<%= nevadaProjects[i]._id %>">
                                        <img src="<%= nevadaProjects[i].image %>"
                                             class="img-fluid h-50">
                                    </a>
                                </div>
                            </div>
                        <% } %>
                    </div>

                </div>
                <div class="tab-pane fade" id="architecture" role="tabpanel" aria-labelledby="architecture-tab">

                    <div class="row row-cols-lg-auto d-flex mx-auto justify-content-center align-items-center me-2 py-1">
                        <% for(i=0; i < californiaProjects.length; i++){ %>
                            <div class="card cardStyle">
                                <div class="bg-image hover-zoom shadow-1-strong rounded">
                                    <a href="/projectC/<%= californiaProjects[i]._id %>">
                                        <img src="<%= californiaProjects[i].image %>"
                                             class="img-fluid h-50">
                                    </a>
                                </div>
                            </div>
                        <% } %>
                    </div>

                </div>
                <div class="tab-pane fade" id="renovation" role="tabpanel" aria-labelledby="renovation-tab">

                    <div class="row row-cols-lg-auto d-flex mx-auto justify-content-center align-items-center me-2 py-1">
                        <% for(i=0; i < hawaiiProjects.length; i++){ %>
                            <div class="card cardStyle">
                                <div class="bg-image hover-zoom shadow-1-strong rounded">
                                    <a href="/projectH/<%= hawaiiProjects[i]._id %>">
                                        <img src="<%= hawaiiProjects[i].image %>"
                                             class="img-fluid h-50">
                                    </a>
                                </div>
                            </div>
                        <% } %>
                    </div>

                </div>
            </div>
            <!-- Pills content -->
        </div>
    </div>

</section>